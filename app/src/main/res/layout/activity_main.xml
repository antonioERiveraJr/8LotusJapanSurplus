<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/live"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Live"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment"
        app:layout_constraintBottom_toTopOf="@+id/buyer"
        />

    <Button
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/live"
        />
    <Button
        android:id="@+id/buyer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Buyer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live"
        app:layout_constraintBottom_toTopOf="@+id/transaction"
        />

    <Button
        android:id="@+id/transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyer"
        app:layout_constraintBottom_toTopOf="@+id/deliver"
        />

    <Button
        android:id="@+id/deliver"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Deliver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
